// 参数
.table-prop table{
    th:first-of-type {
        width: 10%;
        min-width: 120px;
    }
    th:nth-of-type(2) {
        min-width: 100px;
    }
    th:nth-of-type(3) {
        width: 10%;
    }
    th:nth-of-type(4) {
        min-width: 100px;
    }
    th:nth-of-type(5) {
        width: 10%;
    }
    th:nth-of-type(6) {
        width: 10%;
        text-align: center;
    }
}
// 传值
.table-option table{
    th:first-of-type {
        width: 10%;
        min-width: 120px;
    }
    th:nth-of-type(2) {
        min-width: 80px;
    }
    th:nth-of-type(3) {
        min-width: 240px;
    }
    th:nth-of-type(4) {
        width: 15%;
    }
    th:nth-of-type(5) {
        width: 15%;
    }
    th:nth-of-type(6) {
        width: 15%;
    }
    th:nth-of-type(7) {
        width: 15%;
        text-align: center;
    }
}