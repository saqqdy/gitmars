{
	"name": "gitmars",
	"description": "这是一个git工作流工具",
	"type": "module",
	"version": "7.0.0-beta.19",
	"private": false,
	"bin": {
		"gitm": "lib/gitm.mjs"
	},
	"main": "./dist/index.cjs.js",
	"module": "./dist/index.esm-bundler.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.mjs"
		},
		"./lib": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.mjs"
		},
		"./lib/*": {
			"types": "./lib/*.d.ts",
			"import": "./lib/*.mjs"
		},
		"./*.js": {
			"import": "./lib/*.mjs"
		},
		"./*": "./*"
	},
	"imports": {
		"#lib/*": {
			"require": "./lib/*.js",
			"import": "./lib/*.mjs"
		},
		"#conf/*": {
			"require": "./lib/conf/*.js",
			"import": "./lib/conf/*.mjs"
		}
	},
	"files": [
		"lib",
		"typings",
		"*.d.ts"
	],
	"scripts": {
		"build": "rimraf lib es && node --max-old-space-size=8192 node_modules/.bin/rollup -c",
		"dev": "cross-env BUILD_ENV=DEV rollup -c -w",
		"eslint": "eslint --fix --ext .ts,.js,.cjs,.mjs ./",
		"prettier": "prettier --write \"**/*.{js,ts,json,md}\""
	},
	"directories": {
		"bin": "bin",
		"lib": "lib",
		"src": "src"
	},
	"dependencies": {
		"@gitmars/api": "workspace:*",
		"@gitmars/build": "workspace:*",
		"@gitmars/cache": "workspace:*",
		"@gitmars/core": "workspace:*",
		"@gitmars/git": "workspace:*",
		"@gitmars/go": "workspace:*",
		"@gitmars/hook": "workspace:*",
		"@gitmars/utils": "workspace:*",
		"@inquirer/prompts": "^3.3.2",
		"await-to-done": "^1.0.2",
		"chalk": "^4.1.2",
		"columnify": "^1.6.0",
		"commander": "^12.0.0",
		"dayjs": "^1.11.10",
		"js-cool": "^5.19.0",
		"ora": "^5.4.1",
		"os-lang": "^3.2.0",
		"shelljs": "^0.8.5"
	},
	"devDependencies": {
		"@eslint-sets/eslint-config-ts": "^5.13.0",
		"@types/columnify": "^1.5.4",
		"@types/node": "^20.12.7",
		"@types/shelljs": "^0.8.15",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"prettier": "^3.2.5",
		"prettier-config-common": "^1.4.0",
		"tsnd": "^1.1.0",
		"typescript": "^5.4.5"
	},
	"sideEffects": false,
	"keywords": [
		"gitmars",
		"git",
		"tool"
	],
	"license": "GPL-3.0",
	"author": "saqqdy <https://github.com/saqqdy>",
	"homepage": "https://www.saqqdy.com/gitmars",
	"bugs": {
		"url": "https://github.com/saqqdy/gitmars/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/saqqdy/gitmars.git",
		"directory": "packages/gitmars"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	}
}
