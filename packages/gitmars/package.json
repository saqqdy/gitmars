{
    "name": "gitmars",
    "description": "这是一个git工作流工具",
    "version": "4.0.0-alpha.20",
    "private": false,
    "bin": {
        "gitm": "lib/gitm.mjs"
    },
    "exports": {
        ".": {
            "import": "./lib/index.mjs",
            "types": "./typings/index.d.ts"
        },
        "./lib": {
            "import": "./lib/index.mjs",
            "types": "./lib/index.d.ts"
        },
        "./lib/*": {
            "import": "./lib/*.mjs",
            "types": "./lib/*.d.ts"
        },
        "./*.js": {
            "import": "./lib/*.mjs"
        },
        "./*": "./*"
    },
    "imports": {
        "#lib/*": {
            "require": "./lib/*.js",
            "import": "./lib/*.mjs"
        },
        "#conf/*": {
            "require": "./lib/conf/*.js",
            "import": "./lib/conf/*.mjs"
        }
    },
    "files": [
        "lib",
        "typings",
        "*.d.ts"
    ],
    "scripts": {
        "build": "rimraf lib es && node --max-old-space-size=8192 node_modules/.bin/rollup -c",
        "dev": "cross-env BUILD_ENV=DEV rollup -c -w",
        "eslint": "eslint --fix --ext .ts,.js,.cjs,.mjs ./",
        "prettier": "prettier --write \"**/*.{js,ts,json,md}\""
    },
    "directories": {
        "bin": "bin",
        "es": "es",
        "lib": "lib",
        "src": "src",
        "typings": "typings"
    },
    "dependencies": {
        "@gitmars/core": "workspace:*",
        "@jssj/request": "^1.1.0",
        "chalk": "^4.1.2",
        "ci-info": "^3.4.0",
        "columnify": "^1.6.0",
        "commander": "^9.4.0",
        "cosmiconfig": "^7.0.1",
        "cross-spawn": "^7.0.3",
        "dayjs": "^1.11.5",
        "debug": "^4.3.4",
        "inquirer": "^9.1.2",
        "js-cool": "^2.5.0",
        "lodash-es": "^4.17.21",
        "lodash-unified": "^1.0.2",
        "node-apollo": "^1.2.1",
        "ora": "^5.4.1",
        "os-locale": "^6.0.2",
        "shelljs": "^0.8.5",
        "slash": "^3.0.0"
    },
    "devDependencies": {
        "@eslint-sets/eslint-config-simple-ts": "^3.0.5",
        "@saqqdy/prettier-config": "^1.1.2",
        "@types/columnify": "^1.5.1",
        "@types/cross-spawn": "^6.0.2",
        "@types/inquirer": "^9.0.1",
        "@types/lodash-es": "^4.17.6",
        "@types/node": "^18.7.18",
        "@types/shelljs": "^0.8.11",
        "cron-parser": "^4.6.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.23.1",
        "prettier": "^2.7.1",
        "tsnd": "^1.1.0",
        "typescript": "^4.8.3"
    },
    "sideEffects": false,
    "keywords": [
        "gitmars",
        "git",
        "tool"
    ],
    "license": "GPL-3.0",
    "author": "saqqdy <https://github.com/saqqdy>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saqqdy/gitmars.git",
        "directory": "packages/gitmars"
    },
    "bugs": {
        "url": "https://github.com/saqqdy/gitmars/issues"
    },
    "homepage": "https://www.saqqdy.com/gitmars",
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    }
}
