{
    "name": "gitmars",
    "description": "这是一个git工作流工具",
    "version": "3.0.0-alpha.9",
    "private": false,
    "bin": {
        "gitm": "lib/gitm.js"
    },
    "exports": {
        ".": {
            "require": "./lib/index.js",
            "types": "./lib/index.d.ts"
        },
        "./lib": "./lib/index.js",
        "./lib/*.js": "./lib/*.js",
        "./lib/*.d.ts": "./lib/*.d.ts",
        "./lib/*": "./lib/*.js",
        "./*": "./*"
    },
    "files": [
        "lib",
        "typings",
        "*.d.ts"
    ],
    "scripts": {
        "lib": "sh scripts/lib.sh",
        "build:ui": "sh scripts/build-ui.sh",
        "build:server": "rimraf app && sh scripts/build-server.sh",
        "build": "rimraf lib es && node --max-old-space-size=8192 node_modules/.bin/rollup -c",
        "build:types": "run-s build-temp-types roll-types",
        "build-temp-types": "tsc --emitDeclarationOnly --outDir temp/ -p bin/",
        "patch-types": "node scripts/patchTypes",
        "roll-types": "api-extractor run && rimraf temp",
        "circular": "madge lib/ -c",
        "dev": "cross-env BUILD_ENV=DEV rollup -c -w",
        "dist": "run-s eslint prettier build build:server circular build:ui",
        "eslint": "eslint --fix --ext .ts,.js ./",
        "prettier": "prettier --write \"**/*.{js,ts,json,md}\""
    },
    "directories": {
        "bin": "bin",
        "es": "es",
        "lib": "lib",
        "src": "src",
        "typings": "typings"
    },
    "dependencies": {
        "@gitmars/core": "workspace:*",
        "@jssj/request": "^1.0.0-alpha.8",
        "ci-info": "^3.3.0",
        "colors": "^1.4.0",
        "columnify": "^1.6.0",
        "commander": "^9.2.0",
        "cosmiconfig": "^7.0.1",
        "cross-spawn": "^7.0.3",
        "dayjs": "^1.11.1",
        "debug": "^4.3.4",
        "inquirer": "^8.2.4",
        "js-cool": "^2.3.2",
        "node-apollo": "^1.2.1",
        "ora": "^5.4.1",
        "shelljs": "^0.8.5",
        "slash": "^3.0.0"
    },
    "devDependencies": {
        "@eslint-sets/eslint-config-simple-ts": "^2.1.5",
        "@saqqdy/prettier-config": "^1.1.2",
        "@types/cross-spawn": "^6.0.2",
        "@types/inquirer": "^8.2.1",
        "@types/node": "^17.0.31",
        "@types/shelljs": "^0.8.11",
        "cron-parser": "^4.4.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.14.0",
        "madge": "^5.0.1",
        "prettier": "^2.6.2",
        "tsnd": "^1.0.2",
        "typescript": "^4.6.4"
    },
    "sideEffects": false,
    "keywords": [
        "gitmars",
        "git",
        "tool"
    ],
    "license": "GPL-3.0",
    "author": "saqqdy <https://github.com/saqqdy>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saqqdy/gitmars.git",
        "directory": "packages/gitmars"
    },
    "bugs": {
        "url": "https://github.com/saqqdy/gitmars/issues"
    },
    "homepage": "https://www.saqqdy.com/gitmars",
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    }
}
