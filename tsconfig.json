{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "Node",
		"noLib": false,
		"lib": ["ESNext"],
		"sourceMap": false,
		"resolveJsonModule": true,
		"module": "ESNext",
		"strict": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
