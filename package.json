{
    "name": "@gitmars/monorepo",
    "description": "这是一个git工作流工具",
    "version": "3.0.0-beta.3",
    "main": "index.js",
    "files": [
        "static",
        "typings",
        "*.d.ts"
    ],
    "scripts": {
        "docs:dev": "vuepress dev docs",
        "docs:build": "vuepress build docs",
        "docs:deploy": "GH=1 sh scripts/deploy-docs.sh",
        "server:start": "node app/bin/www",
        "server:watch": "nodemon --config nodemon.json",
        "server:watch:debug": "nodemon --config nodemon.json --inspect-brk",
        "server:super": "supervisor app/bin/www",
        "lib": "sh scripts/lib.sh",
        "build:ui": "sh scripts/build-ui.sh",
        "build:server": "rimraf app && sh scripts/build-server.sh",
        "build": "gulp -f build/gulpfile.ts",
        "build2": "tscjs scripts/build",
        "build1": "rimraf lib es && node --max-old-space-size=8192 node_modules/.bin/rollup -c",
        "build:types": "run-s build-temp-types roll-types",
        "build-temp-types": "tsc --emitDeclarationOnly --outDir temp/ -p bin/",
        "patch-types": "node scripts/patchTypes",
        "roll-types": "api-extractor run && rimraf temp",
        "circular": "madge lib/ -c",
        "dev": "cross-env BUILD_ENV=DEV rollup -c -w",
        "pub": "tscjs scripts/publish",
        "unpub": "tscjs scripts/unpublish",
        "sync": "tscjs scripts/sync",
        "viewInfo": "tscjs scripts/viewInfo",
        "update": "tscjs scripts/update",
        "clean": "rimraf dist packages/*/{dist,lib,es,app}",
        "dist": "pnpm run update && pnpm build",
        "dist1": "run-s eslint prettier build build:server circular build:ui",
        "docs": "rimraf typedoc && typedoc",
        "eslint": "eslint --fix --ext .ts,.js ./",
        "prettier": "prettier --write \"**/*.{js,ts,json,md}\"",
        "prettier:docs": "prettier --write \"**/*.md\"",
        "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c"
    },
    "directories": {
        "static": "static",
        "typings": "typings"
    },
    "dependencies": {
        "chalk": "^5.0.1",
        "inquirer": "^8.2.4",
        "js-cool": "^2.3.2",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@eslint-sets/eslint-config-simple-ts": "^2.1.5",
        "@microsoft/api-extractor": "^7.23.0",
        "@pnpm/find-workspace-packages": "^4.0.3",
        "@pnpm/logger": "^4.0.0",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@saqqdy/prettier-config": "^1.1.2",
        "@types/gulp": "^4.0.9",
        "@types/inquirer": "^8.2.1",
        "@types/node": "^17.0.31",
        "@types/rollup-plugin-css-only": "^3.1.0",
        "@vitejs/plugin-vue": "^2.3.1",
        "@vitejs/plugin-vue-jsx": "^1.3.10",
        "consola": "^2.15.3",
        "cron-parser": "^4.4.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.38",
        "eslint": "^8.14.0",
        "eslint-plugin-tsdoc": "^0.2.16",
        "fast-glob": "^3.2.11",
        "gulp": "^4.0.2",
        "gulp-typescript": "^6.0.0-alpha.1",
        "madge": "^5.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.71.1",
        "rollup-plugin-add-banner": "^1.0.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-dts": "^4.2.1",
        "rollup-plugin-esbuild": "^4.9.1",
        "rollup-plugin-filesize": "^9.1.2",
        "rollup-plugin-node-externals": "^4.0.0",
        "rollup-plugin-replace-shebang": "^1.1.1",
        "rollup-plugin-visualizer": "^5.6.0",
        "ts-node": "^10.7.0",
        "tsnd": "^1.0.2",
        "typedoc": "^0.22.15",
        "typedoc-plugin-markdown": "^3.12.1",
        "typescript": "^4.6.4",
        "uglify-js": "^3.15.4",
        "unplugin-vue-define-options": "^0.6.1"
    },
    "peerDependencies": {
        "eslint": ">=8.0.0",
        "prettier": ">=2.4.0"
    },
    "sideEffects": false,
    "keywords": [
        "gitmars",
        "git",
        "tool"
    ],
    "license": "GPL-3.0",
    "author": "saqqdy <https://github.com/saqqdy>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saqqdy/gitmars.git"
    },
    "bugs": {
        "url": "https://github.com/saqqdy/gitmars/issues"
    },
    "homepage": "https://www.saqqdy.com/gitmars",
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search",
                "@babel/core",
                "@types/react",
                "webpack",
                "vite",
                "vue",
                "react",
                "react-dom"
            ],
            "allowedVersions": {
                "eslint": ">= 8.0.0"
            }
        }
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    }
}
